<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="161dp"
            android:layout_height="160dp"
            android:layout_marginTop="5dp"
            android:baselineAligned="false"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="CrApp es una aplicacion para guardar informacion, sin discriminacion alguna, nadie mas tiene derecho a acceder a ella sin tu consentimiento, ni gobiernos, ni criminales!"
            android:textColor="@android:color/black"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Los algoritmos utilizados en esta aplicacion estan actualizados hasta el momento y no se conoce ninguna forma de vulnerarlos"
            android:textColor="@android:color/black"
            android:typeface="monospace" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="CrApp es creada por Miguel Martinez un estudiante, apasionado por la programacion y la seguridad informatica"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:typeface="monospace" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Ayudame con una donacion por medio de Paypal para poder mejorar este proyecto y otros mas, muchas gracias!!"
            android:textAlignment="center"
            android:textColor="@color/Exitoso"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/Btn_Donar"
            android:layout_width="184dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/colorPrimaryDark"
            android:text="Donar!"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="15dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Email: miguefmartinez97@gmail.com"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:typeface="monospace" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>